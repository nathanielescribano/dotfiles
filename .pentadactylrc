" map tab movements how i like
map K gt
map J gT

" faster scrolling
noremap j 5j
noremap k 5k

" map previous selected tab
map a <C-^>

" key to show and hide the url bar
map <A-Down> :set go+=BTm<CR>
map <A-Up> :set go-=BTm<CR>

" set macvim as editor
set editor='/usr/bin/mvim -f +<line> <file>'

" no scroll bar
set go=ns

" no tab bar by default
set showtabline=never

" keys to show the tabbar
map <A-Right> :set showtabline=always<CR>
map <A-Left> :set showtabline=never<CR>

" toggle bookmarks toolbar
map <Leader>. :tbt Bookmarks Toolbar<CR>

